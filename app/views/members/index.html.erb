<% @page_title = "会員名簿" %>
<h1><%= @page_title %></h1>

<% if @members.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>背番号</th>
        <th>ユーザー名</th>
        <th>氏名</th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td style="text-align: right"><%= member.number %></td>
          <td><%= member.name %></td>
          <td><%= member.full_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>会員情報がありません。</p>
<% end %>
